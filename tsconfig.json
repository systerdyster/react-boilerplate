{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": true,
        "allowUnreachableCode": false,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types/",
            "script/@types/"
        ],
        "lib": [
            "dom"
        ],
        "baseUrl": "./src",
    },
    "include": [
        "./src"
    ],
    "exclude": ["./node_modules", "./www"]
}
